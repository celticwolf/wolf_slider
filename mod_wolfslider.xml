<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
    <name>WolfSlider 1.0</name>
    <author>celticwolf.com</author>
	<creationDate>April 2011</creationDate>
	<copyright>Released under GNU/GPL License</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0-standalone.html</license>
	<license>GNU GPL</license>
    <version>1.0</version>
	<authorEmail>info@celticwolf.com</authorEmail>
	<authorUrl>www.celticwolf.com</authorUrl>
    <description>WolfSlider Displays any module in a slider - submit bugs at www.celticwolf.com</description>


	<files>
		<filename module="mod_wolfslider">mod_wolfslider.php</filename>
		<filename>mod_wolfslider.xml</filename>
		<filename>index.html</filename>
		<filename>README.md</filename>
		<filename>LICENSE</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>wolfslider/_class.noobSlide.js</filename>
		<filename>wolfslider/mootools-1.2-core.js</filename>
		<filename>wolfslider/index.html</filename>
		<filename>wolfslider/right.png</filename>
		<filename>wolfslider/left.png</filename>
		<filename>wolfslider/play.png</filename>
		<filename>wolfslider/previous.png</filename>
		<filename>wolfslider/next.png</filename>
		<filename>wolfslider/pause.png</filename>
	</files>
    <languages>
      <language tag="en-GB">en-GB.mod_wolfslider.ini</language>
    </languages>

    <params>
		<param type="spacer" />
		<param type="spacer" default="PARAM_TITLE_WOLFSLIDER_LAYOUT" />
		<param name="wolfslider_wrap_width" type="text" default="600" label="PARAM_LABEL_WOLFSLIDER_WIDTH" description="PARAM_DESC_WOLFSLIDER_WIDTH" />
		<param name="wolfslider_width" type="text" default="550" label="PARAM_LABEL_SLIDE_WIDTH" description="PARAM_DESC_SLIDE_WIDTH" />
		<param name="wolfslider_height" type="text" default="200" label="PARAM_LABEL_SLIDE_HEIGHT" description="PARAM_DESC_SLIDE_HEIGHT" />
		<param name="slides_z_index" type="text" default="1" label="PARAM_LABEL_SLIDE_Z_INDEX" description="PARAM_DESC_SLIDE_Z_INDEX" />
		<param name="slide_buttons_z_index" type="text" default="2" label="PARAM_LABEL_SLIDE_BUTTONS_Z_INDEX" description="PARAM_DESC_SLIDE_BUTTONS_Z_INDEX" />
		<param type="spacer" />
		<param type="spacer" default="PARAM_TITLE_SLIDES" />
		<param name="wolfslider_pos" type="text" default="wolfslider1" label="PARAM_LABEL_WOLFSLIDER_POS" description="PARAM_DESC_WOLFSLIDER_POS" />

		<param type="spacer" />
		<param type="spacer" default="PARAM_TITLE_WOLFSLIDER_OPTIONS" />
		<param name="wolfslider_autoplay" type="radio" default="1" label="PARAM_LABEL_AUTOPLAY" description="PARAM_DESC_AUTOPLAY">
			<option value="0">PARAM_VALUE_NO</option>
			<option value="1">PARAM_VALUE_YES</option>
		</param>
		<param name="wolfslider_speed" type="text" default="6" label="PARAM_LABEL_SPEED" description="PARAM_DESC_SPEED" />
		<param name="show_playback_buttons" type="radio" default="0" label="PARAM_LABEL_SHOW_PLAYBACK_BUTTONS" description="PARAM_DESC_SHOW_PLAYBACK_BUTTONS">
			<option value="0">PARAM_VALUE_NO</option>
			<option value="1">PARAM_VALUE_YES</option>
		</param>
		<param name="wolfslider_effect" type="list" default="1" label="PARAM_LABEL_EFFECT" description="PARAM_DESC_EFFECT">
			<option value="horizontal">PARAM_VALUE_HORIZONTAL</option>
			<option value="vertical">PARAM_VALUE_VERTICAL</option>
			<option value="fade">PARAM_VALUE_FADE</option>
		</param>

		<param type="spacer" />
		<param type="spacer" default="Slide Picker" />
		<param name="use_slide_picker" type="radio" default="0" label="PARAM_LABEL_USE_SLIDE_PICKER" description="PARAM_DESC_USE_SLIDE_PICKER">
			<option value="0">PARAM_VALUE_NO</option>
			<option value="1">PARAM_VALUE_YES</option>
		</param>
		<param name="slide_picker_pos" type="text" default="slide_picker1" label="PARAM_LABEL_SLIDE_PICKER_POS" description="PARAM_DESC_SLIDE_PICKER_POS" />
		<param name="slide_picker_selector" type="text" size="50" default="#wolfslider_handles_more span" label="PARAM_LABEL_SLIDE_PICKER_SELECTOR" description="PARAM_DESC_SLIDE_PICKER_SELECTOR" />
		<param name="wolfslider_event" type="list" default="1" label="PARAM_LABEL_EVENT" description="PARAM_DESC_EVENT">
			<option value="click">click</option>
			<option value="mouseover">mouseover</option>
		</param>

		<param type="spacer" />
		<param type="spacer" default="PARAM_TITLE_LOAD_MOOTOOLS" />
		<param name="wolfslider_mootools" type="radio" default="1" label="PARAM_LABEL_LOAD_MOOTOOLS" description="PARAM_DESC_LOAD_MOOTOOLS">
			<option value="0">PARAM_VALUE_NO</option>
			<option value="1">PARAM_VALUE_YES</option>
		</param>

	</params>
</install>
